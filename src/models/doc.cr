class Doc < BaseModel
  struct Votes
    include JSON::Serializable

    property 👍 : Int32 = 0
    property 👎 : Int32 = 0
    property ❤️ : Int32 = 0
  end

  table do
    column path_index : String
    column view_count : Int32, autogenerated: true

    has_many replies : Reply

    column votes : Doc::Votes, serialize: true, autogenerated: true
  end
end
